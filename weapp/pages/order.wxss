.tabs {
  display: flex;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 10rpx #ccc;
}
.tabs label {
  flex: 1;
  text-align: center;
  font-size: 27rpx;
  color: #333;
}
.tabs label.active {
  color: #ea4451;
}
.orders {
  width: 100%;
  background-color: #f4f4f4;
  position: absolute;
  top: 97rpx;
  bottom: 0;
}
.item {
  padding: 30rpx 20rpx;
  margin-top: 27rpx;
  background-color: #fff;
}
.item .pic {
  width: 200rpx;
  height: 200rpx;
  float: left;
}
.item .meta {
  height: 200rpx;
  margin-left: 230rpx;
  font-size: 27rpx;
  color: #333;
  position: relative;
}
.item .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item .price {
  position: absolute;
  bottom: 0;
  color: #ea4451;
  font-size: 33rpx;
}
.item .price label {
  font-size: 22rpx;
}
.item .num {
  position: absolute;
  bottom: 0;
  right: 20rpx;
  color: #333;
}
.item .amount {
  text-align: right;
  padding: 20rpx;
  font-size: 24rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin-top: 20rpx;
  color: #999;
}
.item .extra {
  padding: 30rpx;
  font-size: 24rpx;
  color: #999;
  position: relative;
}
.item .extra button {
  position: absolute;
  right: 20rpx;
  font-size: 24rpx;
  margin-top: -10rpx;
}

