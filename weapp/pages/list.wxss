.filter {
  display: flex;
  height: 96rpx;
  line-height: 96rpx;
  border-bottom: 1rpx solid #ddd;
}
.filter label {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}
.filter label.active {
  color: #ea4451;
}
.goods {
  position: absolute;
  width: 100%;
  top: 97rpx;
  bottom: 0;
}
.item {
  display: flex;
  padding: 30rpx 20rpx 30rpx 0;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.item:last-child {
  border-bottom: none;
}
.item .pic {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.item .meta {
  flex: 1;
  font-size: 27rpx;
  color: #333;
  position: relative;
}
.item .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item .price {
  position: absolute;
  bottom: 0;
  color: #ea4451;
  font-size: 33rpx;
}
.item .price label {
  font-size: 22rpx;
}

